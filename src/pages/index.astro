---
import Layout from "../layouts/Layout.astro";
// import Navigation from "../components/Navigation.astro";
import "../styles/global.css";

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"];
const interests = ["watching movie", "sketches", "reading novel"];

const pageTitle = 'Home Page';
---

<Layout>
    <!-- <a href="/">Home</a> -->

    <div class="home-page">
        <h1>{pageTitle}</h1>
        <h2>My skills are:</h2>
        <ul>
            {skills.map((skill) => <li>{skill}</li>)}
        </ul>
        <h2>My Interest are:</h2>
        <ul>
            <!-- interests.(interest) -->
            {interests.map((interest) => <li>{interest}</li>)}
        </ul>
        <p>
            Lorem ipsum dolor sit amet consectetur, adipisicing elit.
            Dignissimos vero quia suscipit vitae voluptates reiciendis doloribus
            porro amet, deserunt voluptatum ad excepturi, nihil hic praesentium
            harum repellendus expedita sunt perspiciatis!
        </p>
    </div>
</Layout>
<style>
    .home-page {
        background-color: antiquewhite;
    }
    h1 {
        color: purple;
        font-size: 4rem;
    }
    
</style>
