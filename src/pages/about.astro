---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
// import "../scripts/menu.js";

const pageTitle = "About Me";

const identity = {
    firstName: "Preeti",
    lastName: "Aarya",
    country: "India",
    occupation: "Frontend Developer",
    hobbies: ["readingNobel", "writring", "sketching"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "p5"];
---

<Layout>
    <div class="about">
        <!-- <a href="/">Home</a>
    <a href="/about/">About</a> -->

        <img src="/images/astro-img.jpeg" alt="astro-img" />
        <h1>{pageTitle}</h1>
        <h2>Wecome!</h2>

        <p>Here are a few facts about me:</p>
        <ul>
            <li>My name is {identity.firstName}{identity.lastName}.</li>
            <li>
                I live in {identity.country} and I work as a {
                    identity.occupation
                }.
            </li>
            {
                identity.hobbies.length >= 2 && (
                    <li>
                        Two of my hobbies are: {identity.hobbies[0]} and{" "}
                        {identity.hobbies[1]}
                    </li>
                )
            }
        </ul>
        <p>My skills are:</p>
        <ul>
            {skills.map((skill) => <li class="skill">{skill}</li>)}
        </ul>
        <p>
            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Sit
